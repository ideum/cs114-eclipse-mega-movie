<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ideum.com.megamovie.Java.NewUI.MoonTest.MoonTestIntroFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="25dp"
        android:paddingBottom="65dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:text="@string/moon_test_section_title"
            android:textSize="24dp" />

        <TextView
            android:id="@+id/subheader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#70000000"
            android:text="Optimize your eclipse photography"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/body"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/moon_test_intro"
            android:layout_marginTop="24dp"/>

        <Button
            android:id="@+id/start_moon_test"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:layout_gravity="left"
            android:textColor="#fff"
            android:textAllCaps="false"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:background="@color/colorPrimary"
            android:text="Get Started"/>

    </LinearLayout>


</FrameLayout>
