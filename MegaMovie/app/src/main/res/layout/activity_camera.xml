<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:orientation="vertical">

   <ImageView android:id="@+id/capturePhotoImageView"
       android:layout_width="200dp"
       android:layout_height="250dp"
       android:layout_centerHorizontal="true"
       android:layout_above="@+id/preview_texture_view"
       />

   <TextureView android:id="@+id/preview_texture_view"
       android:layout_width="200dp"
       android:layout_height="250dp"
       android:layout_centerHorizontal="true"
       android:layout_above="@+id/take_photo_button"
      />

   <Button android:id="@+id/take_photo_button"
       android:text="Take Photo"
       android:layout_width="wrap_content"
       android:layout_height="100dp"
       android:layout_marginBottom="20dp"
       android:layout_alignParentBottom="true"
       android:layout_centerHorizontal="true"
       android:onClick="takePhoto" />
</RelativeLayout>
