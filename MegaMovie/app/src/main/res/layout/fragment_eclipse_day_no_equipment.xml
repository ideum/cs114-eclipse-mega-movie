<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ideum.com.megamovie.Java.NewUI.EclipseDay.EclipseDayNoEquipmentFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="25dp"
        android:paddingBottom="65dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:text="Eclipse Image Capture"
            android:textSize="24dp" />


        <TextView
            android:id="@+id/body"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:lineSpacingExtra="4sp"
            android:text="@string/eclipse_day_no_equipment"
            android:layout_marginTop="24dp"/>


        <Button
            android:id="@+id/capture_mode_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:layout_gravity="left"
            android:textColor="#fff"
            android:textAllCaps="false"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:background="@color/colorPrimary"
            android:text="Capture Mode"/>

    </LinearLayout>

</FrameLayout>
