<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="ideum.com.megamovie.Java.NewUI.AssistantFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="Roboto"
        android:textSize="24dp"
        android:textColor="#000"
        android:text="Photographing the Eclipse"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="Roboto"
        android:textSize="16dp"
        android:textColor="#7A000000"
        android:text="How will you capture the eclipse?"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="Roboto"
        android:layout_marginTop="24dp"
        android:textSize="14dp"
        android:textColor="#000"
        android:text="What equipment will you use to photograph the eclipse?"/>

    <Button
        android:id="@+id/only_my_phone_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:textColor="#fff"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:background="@color/colorPrimary"
        android:text="Only my phone"/>

    <Button
        android:id="@+id/with_equipment_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:textColor="#fff"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:background="@color/colorPrimary"
        android:text="My phone with peripheral equipment"/>

    <Button
        android:id="@+id/DSLR_camera_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:textColor="#fff"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:background="@color/colorPrimary"
        android:text="A DSLR camera"/>

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="bottom"
        android:background="#EEEEEE">
        <Button
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BACK"
            android:textSize="14dp"
            android:fontFamily="Roboto"
            android:drawableLeft="@drawable/ic_chevron_left_gray_24dp"
            android:textColor="#6E6E6E"
            android:background="#00000000"
            android:elevation="0dp"
            android:layout_gravity="left"/>
        <Button
            android:id="@+id/finish_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FINISH"
            android:drawableRight="@drawable/ic_chevron_right_gray_24dp"
            android:background="#00000000"
            android:textSize="14dp"
            android:fontFamily="Roboto"
            android:textColor="#6E6E6E"
            android:elevation="0dp"
            android:layout_gravity="right"/>

    </FrameLayout>

</FrameLayout>
