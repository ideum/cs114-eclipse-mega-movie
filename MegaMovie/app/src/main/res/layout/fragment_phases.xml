<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ideum.com.megamovie.Java.NewUI.PhasesFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/main_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/phases_intro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#f2f7ff"
                android:visibility="gone"
                android:elevation="2dp"
                android:orientation="vertical"
                android:paddingBottom="31dp"
                android:paddingLeft="17dp"
                android:paddingTop="41dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Right on Time"
                    android:textColor="@color/colorPrimary"
                    android:textSize="21dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="9dp"
                    android:text="Remember each contact during the eclipse"
                    android:textColor="#000"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/got_it"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="-21dp"
                    android:background="#0000"
                    android:text="GOT IT"

                    android:textColor="@color/colorPrimary" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/bottom_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <FrameLayout
                    android:id="@+id/c1_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="8dp">

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:src="@drawable/c1" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:background="#44222222"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/c1_text_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:layout_marginTop="22dp"
                            android:text="First Contact:"
                            android:textColor="#fff"
                            android:textSize="24sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="27dp"
                            android:layout_marginLeft="16dp"
                            android:text="The beginning of the eclipse"
                            android:textColor="#fff"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/learn_more_c1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="LEARN MORE"
                            android:textColor="#fff"
                            android:layout_margin="16dp"
                            />

                    </LinearLayout>


                </FrameLayout>

                <FrameLayout
                    android:id="@+id/c2_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="8dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:src="@drawable/c2" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:background="#44222222"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/c2_text_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:layout_marginTop="22dp"
                            android:text="Second Contact: "
                            android:textColor="#fff"
                            android:textSize="24sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="27dp"
                            android:layout_marginLeft="16dp"
                            android:text="The beginning of totality"
                            android:textColor="#fff"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/learn_more_c2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="LEARN MORE"
                            android:textColor="#fff"
                            android:layout_margin="16dp"
                            />

                    </LinearLayout>

                </FrameLayout>

                <FrameLayout
                    android:id="@+id/cm_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="8dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:src="@drawable/cm" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:background="#44222222"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/cm_text_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:layout_marginTop="22dp"
                            android:text="Totality: "
                            android:textColor="#fff"
                            android:textSize="24sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="27dp"
                            android:layout_marginLeft="16dp"
                            android:text="The middle of the eclipse"
                            android:textColor="#fff"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/learn_more_cm"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="LEARN MORE"
                            android:textColor="#fff"
                            android:layout_margin="16dp"
                            />

                    </LinearLayout>

                </FrameLayout>


                <FrameLayout
                    android:id="@+id/c3_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="8dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:src="@drawable/c3" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:background="#44222222"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/c3_text_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:layout_marginTop="22dp"
                            android:text="Third Contact:"
                            android:textColor="#fff"
                            android:textSize="24sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="27dp"
                            android:layout_marginLeft="16dp"
                            android:text="The end of totality"
                            android:textColor="#fff"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/learn_more_c3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="LEARN MORE"
                            android:textColor="#fff"
                            android:layout_margin="16dp"
                            />

                    </LinearLayout>

                </FrameLayout>

                <FrameLayout
                    android:id="@+id/c4_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="8dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:src="@drawable/c4" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:background="#44222222"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/c4_text_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:layout_marginTop="22dp"
                            android:text="Fourth Contact:"
                            android:textColor="#fff"
                            android:textSize="24sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="27dp"
                            android:layout_marginLeft="16sp"
                            android:text="The end of the eclipse"
                            android:textColor="#fff"
                            android:textSize="14dp" />

                        <TextView
                            android:id="@+id/learn_more_c4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="LEARN MORE"
                            android:textColor="#fff"
                            android:layout_margin="16dp"
                            />

                    </LinearLayout>


                </FrameLayout>
            </LinearLayout>

        </LinearLayout>


    </ScrollView>


</FrameLayout>
